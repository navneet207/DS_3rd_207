#include <stdio.h>

#define MAX 5
int front = -1,rear = -1;
int queue[MAX];
int isEmpty(){
    return front == -1;
}
int isFull(){
    return rear == MAX -1;
}

void enqueue(int value){
    // printf("rear  %d",rear);
    // printf(" front  %d",front);
    if(isFull()){
        return ;
    }
    if(isEmpty()){
        front = 0;
    }
    
    rear++;
    //  printf("rear - %d",rear);
    queue[rear] = value;
    for(int i = 0;i<= rear;i++){
        printf(" %d ",queue[i]);
    }
    printf("enqued\n");
}


void dequeue(){
    if(isEmpty()){
        return;
    }
    if(front == rear){
        front = rear = -1;
    }
    else{
        front ++;
    }
}

void display(){
    if(isEmpty()){
        return;
    }
    // printf("rear %d",rear);
    // printf(" front %d",front);
    for(int i = front;i <= rear;i++){
        printf("%d ",queue[i]);
    }
    printf("\n");
}


int main(){
    while(1){
        printf("\nEnter 1 for enque:\nEnter 2 for deque:\nEnter 3 for display:\nEnter 4 to exit:\n\n");
        int option;
        printf("Enter your option : ");
        scanf("%d",&option);
        
                int value;
        switch(option){
            case 1:
                printf("Enter value to insert: ");
                scanf("%d",&value);
                enqueue(value);
                break;
            case 2:
                dequeue();
                break;
            case 3:
                printf("\n");
                display();
                break;
            case 4:
                return 0;
        }
    }
    return 0;
}
